@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container" ng-app="myapp" ng-controller="loginController">
    <div class="container-fluid" ng-cloak>
        <div class="form-group">
            <label>Nombre:</label>
            <input type="text" ng-model="name"/>
        </div>
        <div class="form-group">
            <label>Apellido:</label>
            <input type="text" ng-model="lastname"/>
        </div>
        <div class="alert-primary">
            <label>Bienvenido <b>{{name}} {{lastname}}</b></label>
        </div>
    </div>
</div>
<script src="~/lib/angularjs/angular.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>
<script type="text/javascript" src="~/js/coursesController.js">
    issuanceController.init();
</script>
